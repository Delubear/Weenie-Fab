<Window x:Class="WeenieFab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeenieFab"
        mc:Ignorable="d"
        Title="Weenie Fab" Height="600" Width="800">
    <Grid>

        <TextBox x:Name="tbWCID" HorizontalAlignment="Left" Margin="64,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68" Height="18"/>
        <Label x:Name="lblWCID" Content="WCID" HorizontalAlignment="Left" Margin="23,48,0,0" VerticalAlignment="Top" Height="25" Width="40"/>
        <Grid Margin="0,55,0,0" Grid.ColumnSpan="2">
            <TabControl x:Name="tabControl" Margin="0,33,0,0">
                <TabItem x:Name="tiInt32" Header="Integer32">
                    <Grid Background="#FFE5E5E5">
                        <ComboBox x:Name="cbInt32Props" HorizontalAlignment="Left" Margin="92,56,0,0" VerticalAlignment="Top" ItemsSource="{Binding Path=dInt}" Width="417"/>
                        <Label Content="Value" HorizontalAlignment="Left" Margin="92,83,0,0" VerticalAlignment="Top"/>
                        <Label Content="Integer 32" HorizontalAlignment="Left" Margin="92,25,0,0" VerticalAlignment="Top"/>
                        <Button x:Name="btnAddInt32" Content="Add " HorizontalAlignment="Left" Margin="327,103,0,0" VerticalAlignment="Top" Width="90" Click="btnAddInt32_Click"/>
                        <DataGrid x:Name="dgInt32" ItemsSource="{Binding}" Margin="92,137,285,114" AutoGenerateColumns="False" SelectionChanged="dgInt32_SelectionChanged">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="Property" IsReadOnly="True" Binding="{Binding Path=Property}" Width="60"></DataGridTextColumn>
                                <DataGridTextColumn Header="Value" IsReadOnly="True"  Binding="{Binding Path=Value}" Width="50"></DataGridTextColumn>
                                <DataGridTextColumn Header="Description" IsReadOnly="True"  Binding="{Binding Path=Description}" Width="150"></DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <TextBox x:Name="tbValue" PreviewTextInput="NumberValidationTextBox" HorizontalAlignment="Left" Margin="92,105,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
                        <Button x:Name="btnInt32Remove" Content="Remove" HorizontalAlignment="Left" Margin="531,351,0,0" VerticalAlignment="Top" Width="81" Click="btnInt32Remove_Click"/>
                        <Button x:Name="btnUpdateInt32" Content="Update" HorizontalAlignment="Left" Margin="438,103,0,0" VerticalAlignment="Top" Click="btnUpdateInt32_Click_1" Width="71"/>
                    </Grid>
                </TabItem>
                <TabItem Header="Interger 64">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Boolean">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="Float">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="String">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="DiD">
                    <Grid Background="#FFE5E5E5"/>
                </TabItem>
                <TabItem Header="EmoteScript">
                    <Grid Background="#FFE5E5E5">
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <Label x:Name="lblWeenieName" Content="Weenie Name:" HorizontalAlignment="Left" Margin="166,48,0,0" VerticalAlignment="Top" Height="25" Width="84"/>
        <TextBox x:Name="tbWCID_Copy" HorizontalAlignment="Left" Margin="255,52,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Height="18"/>
        <ComboBox x:Name="cbWeenieType" HorizontalAlignment="Left" Margin="536,51,0,0" VerticalAlignment="Top" Width="233"/>
        <Label x:Name="lblWeenieType" Content="Weenie Type:" HorizontalAlignment="Left" Margin="447,48,0,0" VerticalAlignment="Top" Height="25" Width="84"/>
        <ToolBar HorizontalAlignment="Center" Height="33" Margin="0,10,0,0" VerticalAlignment="Top" Width="780">
            <Button Content="Open" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Button Content="Save" VerticalAlignment="Top"/>
        </ToolBar>



    </Grid>

</Window>
